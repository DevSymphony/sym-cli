{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "id-match": [
      "error",
      "^(?:[A-Z][a-zA-Z0-9]*|[a-z][a-zA-Z0-9]*)$",
      {
        "onlyDeclarations": false,
        "properties": true
      }
    ],
    "max-len": [
      "warn",
      {
        "code": 100,
        "ignoreComments": false,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreTrailingComments": false,
        "ignoreUrls": true,
        "tabWidth": 4
      }
    ]
  }
}

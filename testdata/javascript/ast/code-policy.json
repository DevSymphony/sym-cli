{
  "version": "1.0.0",
  "rules": [
    {
      "id": "JS-AST-CLASS-NAMING",
      "enabled": true,
      "category": "naming",
      "severity": "error",
      "desc": "Class declarations must be PascalCase",
      "when": {
        "languages": ["javascript"]
      },
      "check": {
        "engine": "ast",
        "language": "javascript",
        "node": "ClassDeclaration",
        "where": {
          "id.name": "^[A-Z][a-zA-Z0-9]*$"
        }
      },
      "message": "Class names must be PascalCase"
    },
    {
      "id": "JS-AST-FUNCTION-NAMING",
      "enabled": true,
      "category": "naming",
      "severity": "error",
      "desc": "Function declarations must be camelCase",
      "when": {
        "languages": ["javascript"]
      },
      "check": {
        "engine": "ast",
        "language": "javascript",
        "node": "FunctionDeclaration",
        "where": {
          "id.name": "^[a-z][a-zA-Z0-9]*$"
        }
      },
      "message": "Function names must be camelCase"
    },
    {
      "id": "JS-AST-VAR-NAMING",
      "enabled": true,
      "category": "naming",
      "severity": "error",
      "desc": "Variable declarations must be camelCase",
      "when": {
        "languages": ["javascript"]
      },
      "check": {
        "engine": "ast",
        "language": "javascript",
        "node": "VariableDeclarator",
        "where": {
          "id.name": "^[a-z][a-zA-Z0-9]*$"
        }
      },
      "message": "Variable names must be camelCase"
    }
  ],
  "enforce": {
    "stages": ["pre-commit"],
    "fail_on": ["error"]
  }
}
